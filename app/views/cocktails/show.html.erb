<div class="container">
  <h1><%= @cocktail.name %></h1>

  <% @cocktail.doses.each do |dose| %>
  <ul>
    <li>
      <p><%= dose.description %> - <%= dose.ingredient.name %>
       <%= link_to dose_path(dose),method: :delete do %>
        <i class="far fa-trash-alt"></i>
        <% end %>
      </li>
    </ul>
    <% end %>

    <%= link_to "Go back to the cocktail list", cocktails_path %> |
    <%= link_to "Change this cocktail", edit_cocktail_path %> |
    <%= link_to "Delete", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } %>

    <%= simple_form_for [ @cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit %>
    <% end %>
  </div>
